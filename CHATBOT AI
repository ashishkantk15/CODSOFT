# smart_chatbot.py
def get_bot_response(message):
    message = message.lower().strip()

    greetings = ["hi", "hello", "hey", "greetings"]
    farewells = ["bye", "goodbye", "see you", "later"]
    name_queries = ["your name", "who are you", "what's your name"]

    if any(greet in message for greet in greetings):
        return "Hello! I'm ChatNova, your friendly assistant."
    elif any(name in message for name in name_queries):
        return "You can call me ChatNova. I'm here to chat and help!"
    elif any(farewell in message for farewell in farewells):
        return "Farewell! Catch you later."
    elif "how are you" in message:
        return "I'm all circuits and smiles! How about you?"
    elif "joke" in message:
        return "Why don't programmers like nature? It has too many bugs."
    else:
        return "Hmm... I didnâ€™t get that. Try asking me something else!"

# Chat loop
print("Start chatting with ChatNova! Type 'quit' or 'exit' to stop.\n")

while True:
    user_input = input("You: ")
    if user_input.lower() in ["exit", "quit"]:
        print("ChatNova: Chat ended. Have a great day!")
        break
    bot_reply = get_bot_response(user_input)
    print("ChatNova:", bot_reply)
